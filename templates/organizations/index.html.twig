{% extends 'base.html.twig' %}

{% block title %}Список организаций{% endblock %}

{% block body %}
    <h1>Список организаций</h1>
    <a href="{{ path('organizations_index') }}">Список организаций</a>
    <a href="{{ path('employees_index') }}">Список сотрудников</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название организации</th>
                <th>ОГРН</th>
                <th>ОКТМО</th>
            </tr>
        </thead>
        <tbody>
        {% for organization in organizations %}
            <tr>
                <td>{{ organization.id }}</td>
                <td>{{ organization.name }}</td>
                <td>{{ organization.ogrn }}</td>
                <td>{{ organization.oktmo }}</td>
                <td>
                    <a href="{{ path('organizations_show', {'id': organization.id}) }}">Подробнее</a>
{#                    <a href="{{ path('organizations_edit', {'id': organization.id}) }}">edit</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include 'upload_form.html.twig' %}
{#    <a href="{{ path('organizations_new') }}">Добавить нового сотрудника</a>#}
{% endblock %}
