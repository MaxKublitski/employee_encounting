{% extends 'base.html.twig' %}

{% block title %}Organizations index{% endblock %}

{% block body %}
    <h1>Organizations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ogrn</th>
                <th>Oktmo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for organization in organizations %}
            <tr>
                <td>{{ organization.id }}</td>
                <td>{{ organization.name }}</td>
                <td>{{ organization.ogrn }}</td>
                <td>{{ organization.oktmo }}</td>
                <td>
                    <a href="{{ path('organizations_show', {'id': organization.id}) }}">show</a>
                    <a href="{{ path('organizations_edit', {'id': organization.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('organizations_new') }}">Create new</a>
{% endblock %}
